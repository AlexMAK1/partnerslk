<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="s.timofeev">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">

            </column>
            <column name="description" type="VARCHAR(255)">

            </column>
            <column name="email" type="VARCHAR(255)">

            </column>
            <column name="first_name" type="VARCHAR(100)">

            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">

            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="1.0.1" author="s.timofeev">
        <createTable tableName="roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)">

            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="1.0.2" author="s.timofeev">
        <createTable tableName="user_roles">

            <column name="user_id" type="BIGINT" >
            </column>
            <column name="role_id" type="BIGINT" >
            </column>
        </createTable>

    </changeSet>

    <changeSet id="1.0.3" author="s.timofeev">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_roles_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>

    </changeSet>
    <changeSet id="1.0.4" author="s.timofeev">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="role_id"
                                 constraintName="fk_user_roles_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>

    </changeSet>

    <changeSet id="1.0.5" author="s.timofeev">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
            <column name="description" value="user role"/>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN" />
            <column name="description" value="admin"/>
        </insert>
    </changeSet>

    <changeSet id="1.0.6" author="s.timofeev">

        <update tableName="roles" >
            <column name="description" value="DB administrator"/>
        </update>
    </changeSet>

    <changeSet id="1.0.7" author="s.timofeev">

        <update tableName="roles" >
            <column name="description" value="DB administrator"/>
            <where>id='1'</where>
        </update>
        <update tableName="roles" >
            <column name="description" value="User"/>
            <where>id='2'</where>
        </update>
    </changeSet>

    <changeSet id="1.0.8" author="s.timofeev">

        <update tableName="roles" >
            <column name="description" value="DB administrator"/>
            <where>id='2'</where>
        </update>
        <update tableName="roles" >
            <column name="description" value="User"/>
            <where>id='1'</where>
        </update>
    </changeSet>
</databaseChangeLog>